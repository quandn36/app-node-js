<div class="main">
    <nav class="breadcrumb">
        <a class="breadcrumb-item" href="/">Home</a>
        <a class="breadcrumb-item" >Course</a>
        <a class="breadcrumb-item" >{{course.name}}</a>
    </nav>
    <div class="update_button">
        <a href="manager/{{course.slug}}/edit"  >
            <button class="btn btn-danger" type="submit" style="margin-bottom: 20px;" >Update</button>
        </a>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-4">
                    <img src="{{course.image}}" 
                    class="img-fluid ${3|rounded-top,rounded-right,rounded-bottom,rounded-left,rounded-circle,|}" >
                </div>
                <div class="col-lg-8">
                    <div class="form-group">
                        <label for="">Class name</label>
                        <input type="text"
                            class="form-control" 
                            readonly="readonly" 
                            value="{{course.name}}" >
                    </div>
                    <div class="form-group">
                        <label for="">Descriptions</label>
                        <textarea type="text"
                            class="form-control"  
                            readonly="readonly"
                            rows="8" >{{course.descriptions}}</textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>