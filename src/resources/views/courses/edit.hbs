<div class="main">
    <nav class="breadcrumb">
        <a class="breadcrumb-item" href="/">Home</a>
        <a class="breadcrumb-item" >edit</a>
        <a class="breadcrumb-item">{{course.name}}</a>
    </nav>
    <div class="row">
        <div class="col-lg-12">
            <form method="post" action="/course/update?_method=PUT">
                <div class="form-group">
                    <label for="course_name">Name</label>
                    <input type="text" 
                        class="form-control" 
                        id="course_name" 
                        name="course_name" 
                        value="{{course.name}}" >
                </div>
                <div class="form-group">
                    <label for="course_description">Description</label>
                    <textarea type="text" 
                        class="form-control" 
                        id="course_description" 
                        name="course_description" 
                        rows="6" 
                        value="{{course.descriptions}}">{{course.descriptions}}</textarea>
                </div>
                <input type="hidden" 
                    name="course_image" 
                    value="https://img.youtube.com/vi/M62l1xA5Eu8/sddefault.jpg" >
                <div class="button_update_course">
                    <button class="btn btn-primary" type="submit" >Update</button>
                </div>
                <input type="hidden" name="id" value="{{course._id}}" >
            </form>
        </div>
    </div>

</div>