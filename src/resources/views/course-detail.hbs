<div class="main">
    <nav class="breadcrumb">
        <a class="breadcrumb-item" href="/">Home</a>
        <a class="breadcrumb-item" >{{course.name}}</a>
    </nav>
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-4">
                    <img src="{{course.image}}" class="img-fluid ${3|rounded-top,rounded-right,rounded-bottom,rounded-left,rounded-circle,|}" alt="">
                </div>
                <div class="col-lg-8">
                    <div class="form-group">
                        <label for="">Class name</label>
                        <input type="text"
                            class="form-control" readonly="readonly" value="{{course.name}}" name="" id="" aria-describedby="helpId" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="">Descriptions</label>
                        <input type="text"
                            class="form-control" readonly="readonly" value="{{course.descriptions}}" name="" id="" aria-describedby="helpId" placeholder="">
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>